@{
    Layout = null;
}

<html>
<head>
    <title>Tiki Product Page</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&amp;display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            width: 100%;
        }

        .header {
            background-color: #fff;
            padding: 10px 20px;
        }

        .header-logo {
            display: flex;
            justify-content: space-between;
        }

        .header img {
            height: 40px;
        }

        .header input {
            width: 300px;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .header .icons {
            display: flex;
            align-items: center;
        }

            .header .icons i {
                margin-left: 20px;
                font-size: 20px;
                color: #333;
            }

        .category-links {
            margin-top: 10px;
        }

        .breadcrumb {
            padding: 10px 20px;
            font-size: 14px;
            color: #666;
            text-align: left; /* Căn trái breadcrumb */
            width: 90%;
        }

            .breadcrumb a {
                color: #007bff;
                text-decoration: none;
            }

                .breadcrumb a:hover {
                    text-decoration: underline;
                }

        .container {
            display: flex;
            padding: 0px;
            width: 90%;
            gap: 20px;
        }

        .left-column, .center-column, .right-column {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
        }

        .left-column {
            flex: 1;
            margin-right: 10px;
        }

        .center-column {
            flex: 1;
            margin-right: 20px;
        }

        .right-column {
            flex: 1;
            height: auto;
            width: auto;
        }

        .product-images img {
            width: 100%;
            border-radius: 8px;
        }

        .product-thumbnails {
            display: flex;
            margin-top: 10px;
            padding: 10px;
        }

            .product-thumbnails img {
                width: 60px;
                height: 60px;
                margin-right: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                cursor: pointer;
            }

        .product-info h1 {
            font-size: 24px;
            margin: 0;
        }

        .product-info .rating {
            display: flex;
            align-items: center;
            margin: 10px 0;
        }

            .product-info .rating i {
                color: #ffcc00;
                margin-right: 5px;
            }

        .product-info .price {
            font-size: 28px;
            color: #d0021b;
            margin: 10px 0;
            text-align: left;
        }

        .product-info .flavor {
            margin: 10px 0;
            text-align: left;
        }

            .product-info .flavor button {
                padding: 5px 10px;
                border: 1px solid #007bff;
                background-color: #fff;
                color: #007bff;
                border-radius: 4px;
                cursor: pointer;
            }

                .product-info .flavor button:hover {
                    background-color: #007bff;
                    color: #fff;
                }

        .shipping-info {
            margin-top: 20px;
        }

            .shipping-info h3 {
                font-size: 18px;
                margin: 0 0 10px 0;
            }

            .shipping-info p {
                margin: 5px 0;
                font-size: 14px;
            }

            .shipping-info .highlight {
                color: #d0021b;
                font-weight: bold;
            }

        .purchase-options {
            text-align: center;
        }

            .purchase-options .price {
                font-size: 28px;
                color: #d0021b;
                margin: 20px 0;
            }

            .purchase-options .quantity {
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 20px 0;
            }

                .purchase-options .quantity button {
                    padding: 5px 10px;
                    border: 1px solid #ccc;
                    background-color: #fff;
                    cursor: pointer;
                }

                .purchase-options .quantity input {
                    width: 40px;
                    text-align: center;
                    border: 1px solid #ccc;
                    margin: 0 10px;
                }

            .purchase-options .buy-now, .purchase-options .add-to-cart {
                display: block;
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 4px;
                font-size: 16px;
                cursor: pointer;
                margin: 10px 0;
            }

            .purchase-options .buy-now {
                background-color: #d0021b;
                color: #fff;
            }

            .purchase-options .add-to-cart {
                background-color: #007bff;
                color: #fff;
            }

        input[type="text"] {
            width: 1000px; /* Độ rộng của input */
            padding: 5px; /* Khoảng cách bên trong input */
            border: 2px solid #007bff; /* Viền input */
            border-radius: 8px; /* Góc bo tròn */
            font-size: 12px; /* Kích thước chữ */
            color: #333; /* Màu chữ */
            background-color: #f9f9f9; /* Màu nền */
            outline: none; /* Xóa viền mặc định khi nhấp vào */
            transition: border-color 0.3s ease-in-out; /* Hiệu ứng khi thay đổi viền */
        }

            /* Khi người dùng nhấp vào input */
            input[type="text"]:focus {
                border-color: #0056b3; /* Thay đổi màu viền khi được chọn */
                background-color: #fff; /* Màu nền khi input được chọn */
            }

            /* Thiết lập cho placeholder */
            input[type="text"]::placeholder {
                color: #aaa; /* Màu chữ placeholder */
                font-style: italic; /* Nghiêng chữ placeholder */
            }

        .shipping-info {
            background-color: white;
            flex: 1;
            margin-right: 20px;
            border-radius: 8px;
            display: normal;
            padding: 5px;
        }

        section div h2 {
            border-bottom: 1px solid #ccc;
            color: #504e4e;
            user-select: text;
        }

        section div h2 {
            text-align: left;
        }

        section div table {
            width: auto;
            display: flex;
            border-bottom: 1px solid #ccc;
            color: #504e4e;
            user-select: text;
        }

        section div h4 {
            border-bottom: 1px solid #ccc;
            color: #504e4e;
            user-select: text;
            text-align: left;
        }

        section div h6 {
            text-align: left;
            color: #504e4e;
        }

        section div h7 p {
            border-bottom: 1px solid #ccc;
            color: #504e4e;
            user-select: text;
            text-align: left;
            width: auto;
            padding: 20px;
        }

        section div h8 {
            text-align: left;
        }

        .anh {
            padding: 20px;
        }

        input[type="text"] {
            width: 1000px; /* Độ rộng của input */
            padding: 10px; /* Khoảng cách bên trong input */
